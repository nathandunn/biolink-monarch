<tool id="monarch-gene-associations" name="Gene Associations" version="0.1.0">
    <requirements/>
    <stdio>
        <exit_code range="1:" />
    </stdio>
	<command><![CDATA[
curl -X GET --header 'Accept: application/json' 'https://api.monarchinitiative.org/api/bioentity/disease/$input1/$association1/?rows=1000&fetch_objects=true' > $output1
	]]></command>
	<inputs>
	    <param  name="input1" type="text" format="txt" multiple="false" label="Disease" />
		<!--<param  name="input2" type="text" format="txt" multiple="false" label="Associated Type: genes, models, phenotypes, substance" />-->
		<param  name="association1" type="select" multiple="false" display="radio" label="Type">
			<option value="diseases"/>
			<option value="function"/>
			<option value="homologs"/>
			<option value="interactions"/>
			<option value="phenotypes"/>
			<!--NOT YET SUPPORTED-->
			<!--<option value="substance">substance</option>-->
		</param>
    </inputs>
    <outputs>
	        <data name="output1" format="json" />
    </outputs>
	 <tests>
		 <test>
			 <param name="input1" value="OMIM:605543"/>
			 <param name="association1" value="genes"/>
			 <output name="output1" file="genes-for-disease.json"/>
		 </test>
	 </tests>
    <help><![CDATA[
        Pulls data from Monarch Initiative BioLink API web services as JSON for a given disease.
		https://api.monarchinitiative.org/api/#!/bioentity/get_disease_gene_associations
    ]]></help>
	<citations>
		<citation type="doi">doi:10.5281/zenodo.56412</citation>
    </citations>
</tool>
