<tool id="monarch-bioentity-associations" name="Bioentity Associations" version="0.1.0">
	<requirements/>
	<stdio>
		<exit_code range="1:" />
	</stdio>
	<command><![CDATA[
curl -X GET --header 'Accept: application/json' 'https://api.monarchinitiative.org/api/bioentity/$input1/associations/?rows=1000&fetch_objects=true' > $output1
	]]></command>
	<inputs>
		<param  name="input1" type="text" format="txt" multiple="false" label="Any bioentity object (disease, gene, phenotype, etc.)" />
		<!--<param  name="input2" type="text" format="txt" multiple="false" label="Associated Type: genes, models, phenotypes, substance" />-->
	</inputs>
	<outputs>
		<data name="output1" format="json" />
	</outputs>
	<tests>
		<test>
			<param name="input1" value="OMIM:605543"/>
			<param name="association1" value="genes"/>
			<output name="output1" file="genes-for-disease.json"/>
		</test>
	</tests>
	<help><![CDATA[
        Pulls data from Monarch Initiative BioLink API web services as JSON for a given disease.
		https://api.monarchinitiative.org/api/#!/bioentity/get_disease_gene_associations
    ]]></help>
	<citations>
		<citation type="doi">doi:10.5281/zenodo.56412</citation>
	</citations>
</tool>
